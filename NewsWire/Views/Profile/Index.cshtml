@model NewsWire.Models.UserProfileDashboardViewModel

@{
    ViewData["Title"] = "My Profile";
}

@section Styles {
    <link href="~/assets/css/profile.css" rel="stylesheet">
}

<div class="profile-container">
    <div class="container">
        
        <!-- Profile Header -->
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-md-3 text-center text-md-start mb-3 mb-md-0">
                    <img src="@(Model.Profile.CurrentPicturePath ?? "/images/default-avatar.png")" 
                         alt="Profile Picture" 
                         class="profile-avatar">
                </div>
                <div class="col-md-6">
                    <div class="profile-info">
                        <h2>@Model.Profile.FirstName @Model.Profile.LastName</h2>
                        <p><i class="bi bi-envelope me-2"></i>@Model.Profile.Email</p>
                        <p><i class="bi bi-calendar-check me-2"></i>Member since @Model.Profile.JoinDate.ToString("MMMM yyyy")</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="profile-stats">
                        <div class="row text-center">
                            <div class="col-6">
                                <div class="stat-item">
                                    <span class="stat-number">@Model.Statistics.TotalArticles</span>
                                    <small class="stat-label">Articles</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item">
                                    <span class="stat-number">@Model.Statistics.TotalFavorites</span>
                                    <small class="stat-label">Favorites</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Navigation Tabs -->
        <div class="profile-nav">
            <ul class="nav nav-pills nav-fill" id="profileTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "profile" ? "active" : "")" 
                            id="profile-tab" data-bs-toggle="pill" data-bs-target="#profile" 
                            type="button" role="tab">
                        <i class="bi bi-person-circle me-2"></i>
                        Profile Settings
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "articles" ? "active" : "")" 
                            id="articles-tab" data-bs-toggle="pill" data-bs-target="#articles" 
                            type="button" role="tab">
                        <i class="bi bi-newspaper me-2"></i>
                        My Articles (@Model.Statistics.TotalArticles)
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "favorites" ? "active" : "")" 
                            id="favorites-tab" data-bs-toggle="pill" data-bs-target="#favorites" 
                            type="button" role="tab">
                        <i class="bi bi-heart me-2"></i>
                        Favorites (@Model.Statistics.TotalFavorites)
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link @(Model.ActiveTab == "statistics" ? "active" : "")" 
                            id="statistics-tab" data-bs-toggle="pill" data-bs-target="#statistics" 
                            type="button" role="tab">
                        <i class="bi bi-bar-chart me-2"></i>
                        Statistics
                    </button>
                </li>
            </ul>
        </div>

        <!-- Tab Content -->
        <div class="tab-content" id="profileTabsContent">
            
            <!-- Profile Settings Tab -->
            <div class="tab-pane fade @(Model.ActiveTab == "profile" ? "show active" : "")" 
                 id="profile" role="tabpanel">
                <div class="profile-content">
                    <h4 class="mb-4">
                        <i class="bi bi-gear me-2"></i>
                        Profile Settings
                    </h4>
                    
                    <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data" class="profile-form">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row">
                            <!-- Profile Image Section -->
                            <div class="col-md-4 mb-4">
                                <label class="form-label fw-bold">Profile Picture</label>
                                <div class="image-upload-section @(Model.Profile.CurrentPicturePath != null ? "has-image" : "")" 
                                     onclick="document.getElementById('profileImage').click()">
                                    @if (Model.Profile.CurrentPicturePath != null)
                                    {
                                        <img src="@Model.Profile.CurrentPicturePath" 
                                             alt="Current Profile" 
                                             class="current-image-preview mb-3">
                                        <p class="text-muted mb-0">Click to change picture</p>
                                    }
                                    else
                                    {
                                        <i class="bi bi-cloud-upload" style="font-size: 3rem; color: var(--accent-color);"></i>
                                        <h6 class="mt-3 mb-2">Upload Profile Picture</h6>
                                        <p class="text-muted mb-0">Click to select an image</p>
                                    }
                                </div>
                                <input type="file" id="profileImage" asp-for="Profile.ProfileImage" 
                                       accept="image/*" style="display: none;" onchange="previewImage(this)">
                                <span asp-validation-for="Profile.ProfileImage" class="text-danger small"></span>
                            </div>

                            <!-- Personal Information -->
                            <div class="col-md-8">
                                <div class="row">
                                    <div class="col-md-6 mb-4">
                                        <div class="form-floating">
                                            <input asp-for="Profile.FirstName" class="form-control" placeholder="First Name">
                                            <label asp-for="Profile.FirstName">First Name</label>
                                            <span asp-validation-for="Profile.FirstName" class="text-danger small"></span>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-6 mb-4">
                                        <div class="form-floating">
                                            <input asp-for="Profile.LastName" class="form-control" placeholder="Last Name">
                                            <label asp-for="Profile.LastName">Last Name</label>
                                            <span asp-validation-for="Profile.LastName" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="col-12 mb-4">
                                        <div class="form-floating">
                                            <input asp-for="Profile.Email" class="form-control" placeholder="Email" readonly>
                                            <label asp-for="Profile.Email">Email Address</label>
                                            <small class="text-muted">Email cannot be changed from here</small>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary btn-lg">
                                        <i class="bi bi-check-circle me-2"></i>
                                        Update Profile
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- My Articles Tab -->
            <div class="tab-pane fade @(Model.ActiveTab == "articles" ? "show active" : "")" 
                 id="articles" role="tabpanel">
                <div class="profile-content">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4>
                            <i class="bi bi-newspaper me-2"></i>
                            My Articles
                        </h4>
                        <a href="@Url.Action("Create", "News")" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>
                            Write New Article
                        </a>
                    </div>

                    @if (Model.UserNews.Any())
                    {
                        <div class="row">
                            @foreach (var newsItem in Model.UserNews)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="news-card">
                                        @if (!string.IsNullOrEmpty(newsItem.News.ImageUrl))
                                        {
                                            <img src="@newsItem.News.ImageUrl" alt="@newsItem.News.Title" class="news-card-image">
                                        }
                                        <div class="news-card-body">
                                            <h6 class="news-card-title">@newsItem.News.Title</h6>
                                            <p class="news-card-content">
                                                @(newsItem.News.Content.Length > 100 ? 
                                                  newsItem.News.Content.Substring(0, 100) + "..." : 
                                                  newsItem.News.Content)
                                            </p>
                                            <div class="news-card-meta">
                                                <span class="news-date">
                                                    <i class="bi bi-calendar3 me-1"></i>
                                                    @newsItem.News.PublishedAt.ToString("MMM dd, yyyy")
                                                </span>
                                                <span class="category-badge">@newsItem.News.Category.Name</span>
                                            </div>
                                            <div class="news-actions">
                                                <a href="@Url.Action("Details", "News", new { id = newsItem.News.Id })" 
                                                   class="btn-action btn-primary">
                                                    <i class="bi bi-eye me-1"></i>View
                                                </a>
                                                <a href="@Url.Action("EditMyNews", "Profile", new { newsId = newsItem.News.Id })" 
                                                   class="btn-action btn-edit">
                                                    <i class="bi bi-pencil me-1"></i>Edit
                                                </a>
                                                <form asp-action="DeleteMyNews" method="post" class="d-inline">
                                                    <input type="hidden" name="newsId" value="@newsItem.News.Id">
                                                    <button type="submit" class="btn-action btn-delete" 
                                                            onclick="return confirm('Are you sure you want to delete this article?')">
                                                        <i class="bi bi-trash me-1"></i>Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (Model.UserNews.Count >= 6)
                        {
                            <div class="text-center mt-4">
                                <a href="@Url.Action("MyNews", "Profile")" class="btn btn-outline-primary">
                                    View All My Articles
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-newspaper"></i>
                            <h5>No Articles Yet</h5>
                            <p>You haven't written any articles yet. Start sharing your thoughts with the world!</p>
                            <a href="@Url.Action("Create", "News")" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-2"></i>
                                Write Your First Article
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Favorites Tab -->
            <div class="tab-pane fade @(Model.ActiveTab == "favorites" ? "show active" : "")" 
                 id="favorites" role="tabpanel">
                <div class="profile-content">
                    <h4 class="mb-4">
                        <i class="bi bi-heart me-2"></i>
                        Favorite Articles
                    </h4>

                    @if (Model.FavoriteNews.Any())
                    {
                        <div class="row">
                            @foreach (var newsItem in Model.FavoriteNews)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="news-card">
                                        @if (!string.IsNullOrEmpty(newsItem.News.ImageUrl))
                                        {
                                            <img src="@newsItem.News.ImageUrl" alt="@newsItem.News.Title" class="news-card-image">
                                        }
                                        <div class="news-card-body">
                                            <h6 class="news-card-title">@newsItem.News.Title</h6>
                                            <p class="news-card-content">
                                                @(newsItem.News.Content.Length > 100 ? 
                                                  newsItem.News.Content.Substring(0, 100) + "..." : 
                                                  newsItem.News.Content)
                                            </p>
                                            <div class="news-card-meta">
                                                <span class="news-date">
                                                    <i class="bi bi-calendar3 me-1"></i>
                                                    @newsItem.News.PublishedAt.ToString("MMM dd, yyyy")
                                                </span>
                                                <span class="category-badge">@newsItem.News.Category.Name</span>
                                            </div>
                                            <div class="news-actions">
                                                <a href="@Url.Action("Details", "News", new { id = newsItem.News.Id })" 
                                                   class="btn-action btn-primary">
                                                    <i class="bi bi-eye me-1"></i>View
                                                </a>
                                                <form asp-action="ToggleFavorite" method="post" class="d-inline">
                                                    <input type="hidden" name="newsId" value="@newsItem.News.Id">
                                                    <button type="submit" class="btn-action btn-favorite active">
                                                        <i class="bi bi-heart-fill me-1"></i>Remove
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        @if (Model.FavoriteNews.Count >= 6)
                        {
                            <div class="text-center mt-4">
                                <a href="@Url.Action("MyFavorites", "Profile")" class="btn btn-outline-primary">
                                    View All Favorites
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-heart"></i>
                            <h5>No Favorites Yet</h5>
                            <p>You haven't added any articles to your favorites. Explore articles and save the ones you love!</p>
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                                <i class="bi bi-search me-2"></i>
                                Explore Articles
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Statistics Tab -->
            <div class="tab-pane fade @(Model.ActiveTab == "statistics" ? "show active" : "")" 
                 id="statistics" role="tabpanel">
                <div class="profile-content">
                    <h4 class="mb-4">
                        <i class="bi bi-bar-chart me-2"></i>
                        Publishing Statistics
                    </h4>

                    <div class="row">
                        <!-- Overview Stats -->
                        <div class="col-md-6 mb-4">
                            <div class="statistics-card">
                                <h5>Overview</h5>
                                <div class="row text-center">
                                    <div class="col-6 mb-3">
                                        <div class="stat-item">
                                            <span class="stat-number text-primary">@Model.Statistics.TotalArticles</span>
                                            <small class="stat-label">Total Articles</small>
                                        </div>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <div class="stat-item">
                                            <span class="stat-number text-success">@Model.Statistics.PublishedThisMonth</span>
                                            <small class="stat-label">This Month</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Category Breakdown -->
                        <div class="col-md-6 mb-4">
                            <div class="statistics-card">
                                <h5>Category Breakdown</h5>
                                @if (Model.Statistics.CategoryBreakdown.Any())
                                {
                                    <div class="category-breakdown">
                                        @foreach (var category in Model.Statistics.CategoryBreakdown.Take(5))
                                        {
                                            <div class="category-item">
                                                <div>
                                                    <strong>@category.CategoryName</strong>
                                                    <small class="text-muted">(@category.ArticleCount articles)</small>
                                                </div>
                                                <span class="badge bg-primary">@category.Percentage%</span>
                                            </div>
                                            <div class="category-progress">
                                                <div class="category-progress-bar" style="width: @category.Percentage%"></div>
                                            </div>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted">No data available yet.</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Image preview functionality
        function previewImage(input) {
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const uploadSection = input.closest('.image-upload-section');
                    uploadSection.innerHTML = `
                        <img src="${e.target.result}" alt="Preview" class="current-image-preview mb-3">
                        <p class="text-muted mb-0">Click to change picture</p>
                    `;
                    uploadSection.classList.add('has-image');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);

        // Smooth tab switching
        document.addEventListener('shown.bs.tab', function (event) {
            const targetTab = event.target.getAttribute('data-bs-target');
            if (targetTab) {
                const url = new URL(window.location);
                url.searchParams.set('tab', targetTab.replace('#', ''));
                window.history.replaceState(null, '', url);
            }
        });
    </script>
}