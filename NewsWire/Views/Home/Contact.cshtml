@{
    ViewData["Title"] = "Contact Us";
}

<!-- Page Title -->
<div class="page-title" data-aos="fade">
    <div class="container">
        <h1>Contact Us</h1>
    </div>
</div><!-- End Page Title -->
<!-- Contact Section -->
<section id="contact" class="contact section">
    <div class="container">
        <div class="row gy-4">
            <!-- Contact Information -->
            <div class="col-lg-4">
                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                    <i class="bi bi-geo-alt flex-shrink-0"></i>
                    <div>
                        <h3>Address</h3>
                        <p>123 News Plaza, Media District<br>New York, NY 10001, USA</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                    <i class="bi bi-telephone flex-shrink-0"></i>
                    <div>
                        <h3>Call Us</h3>
                        <p>+1 (555) 123-4567</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                    <i class="bi bi-envelope flex-shrink-0"></i>
                    <div>
                        <h3>Email Us</h3>
                        <p>newsroom@newswire.com</p>
                    </div>
                </div><!-- End Info Item -->

                <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="500">
                    <i class="bi bi-clock flex-shrink-0"></i>
                    <div>
                        <h3>Open Hours</h3>
                        <p>Newsroom operates 24/7<br>Office: Mon-Fri 9AM-6PM EST</p>
                    </div>
                </div><!-- End Info Item -->
            </div>

            <!-- Contact Form -->
            <div class="col-lg-8">
                <form action="#" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                    <div class="row gy-4">
                        <div class="col-md-6">
                            <input type="text" name="name" class="form-control" placeholder="Your Name" required="">
                        </div>

                        <div class="col-md-6">
                            <input type="email" class="form-control" name="email" placeholder="Your Email" required="">
                        </div>

                        <div class="col-12">
                            <input type="text" class="form-control" name="subject" placeholder="Subject" required="">
                        </div>

                        <div class="col-12">
                            <select class="form-control" name="inquiry_type" required="">
                                <option value="">Select Inquiry Type</option>
                                <option value="news_tip">News Tip</option>
                                <option value="press_release">Press Release</option>
                                <option value="interview_request">Interview Request</option>
                                <option value="correction">Correction Request</option>
                                <option value="general">General Inquiry</option>
                                <option value="careers">Careers</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <textarea class="form-control" name="message" rows="6" placeholder="Message" required=""></textarea>
                        </div>

                        <div class="col-12 text-center">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>

                            <button type="submit">Send Message</button>
                        </div>
                    </div>
                </form>
            </div><!-- End Contact Form -->
        </div>
    </div>
</section><!-- /Contact Section -->
<!-- News Tips Section -->
<section id="news-tips" class="news-tips section light-background">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 offset-lg-2 text-center" data-aos="fade-up">
                <h2>Submit a News Tip</h2>
                <p>Have a story idea or breaking news tip? We want to hear from you. Your tips help us serve the community better.</p>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4 text-center" data-aos="fade-up" data-aos-delay="100">
                <div class="tip-category">
                    <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                    <h4>Confidential Tips</h4>
                    <p>We protect our sources and handle sensitive information with the utmost care and discretion.</p>
                </div>
            </div>

            <div class="col-md-4 text-center" data-aos="fade-up" data-aos-delay="200">
                <div class="tip-category">
                    <i class="bi bi-lightning-fill display-4 text-primary mb-3"></i>
                    <h4>Breaking News</h4>
                    <p>Report breaking news or urgent stories that require immediate attention from our newsroom.</p>
                </div>
            </div>

            <div class="col-md-4 text-center" data-aos="fade-up" data-aos-delay="300">
                <div class="tip-category">
                    <i class="bi bi-search display-4 text-primary mb-3"></i>
                    <h4>Investigative Leads</h4>
                    <p>Share leads for investigative stories that could benefit from in-depth reporting and research.</p>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12 text-center">
                <h5>Emergency News Hotline: +1 (555) NEWS-911</h5>
                <p>For urgent breaking news, call our 24/7 newsroom hotline</p>
            </div>
        </div>
    </div>
</section><!-- /News Tips Section -->
<!-- Social Media Section -->
<section id="social-media" class="social-media section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center" data-aos="fade-up">
                <h2>Follow Us on Social Media</h2>
                <p>Stay connected with NEWSWIRE across all platforms for real-time updates and behind-the-scenes content</p>

                <div class="social-links d-flex justify-content-center mt-4">
                    <a href="#" class="mx-3"><i class="bi bi-twitter-x"></i> <span>@@NewsWireOfficial</span></a>
                    <a href="#" class="mx-3"><i class="bi bi-facebook"></i> <span>NewsWire</span></a>
                    <a href="#" class="mx-3"><i class="bi bi-instagram"></i> <span>@@newswire_media</span></a>
                    <a href="#" class="mx-3"><i class="bi bi-linkedin"></i> <span>NewsWire Media</span></a>
                    <a href="#" class="mx-3"><i class="bi bi-youtube"></i> <span>NewsWire TV</span></a>
                </div>
            </div>
        </div>
    </div>
</section><!-- /Social Media Section -->