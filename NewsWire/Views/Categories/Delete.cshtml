@model NewsWire.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

@section Styles {
    <link href="~/assets/css/crud-forms.css" rel="stylesheet">
}

<!-- Main Content Section -->
<section class="section py-5">
    <div class="container" data-aos="fade-up">
        
        <!-- Warning Alert -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="alert alert-danger delete-warning" role="alert">
                    <h5 class="alert-heading mb-3">
                        <i class="bi bi-shield-exclamation me-2"></i>
                        Confirm Deletion
                    </h5>
                    <p class="mb-0">
                        <strong>Warning:</strong> This action cannot be undone. Deleting this category may affect related news articles and system functionality.
                    </p>
                </div>
            </div>
        </div>

        <!-- Category Details Card -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card delete-card border-0">
                    <div class="card-header bg-light border-0 py-4">
                        <h4 class="card-title mb-0 text-danger">
                            <i class="bi bi-folder-x me-2"></i>
                            Category Details
                        </h4>
                        <p class="text-muted mb-0 mt-2">Review the category information before deletion</p>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="row">
                            <!-- Category Name -->
                            <div class="col-md-6 mb-4">
                                <div class="info-item">
                                    <label class="form-label fw-bold text-muted mb-2">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </label>
                                    <div class="info-value p-3 bg-light rounded">
                                        <h6 class="mb-0 text-dark">@Html.DisplayFor(model => model.Name)</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Category Description -->
                            <div class="col-md-6 mb-4">
                                <div class="info-item">
                                    <label class="form-label fw-bold text-muted mb-2">
                                        @Html.DisplayNameFor(model => model.Description)
                                    </label>
                                    <div class="info-value p-3 bg-light rounded">
                                        <p class="mb-0 text-dark">@Html.DisplayFor(model => model.Description)</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4 pt-4 border-top">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                    <!-- Back Button -->
                                    <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                        <i class="bi bi-arrow-left me-2"></i>
                                        Back to Categories
                                    </a>

                                    <!-- Delete Form -->
                                    <form asp-action="Delete" class="d-inline">
                                        <input type="hidden" asp-for="Id" />
                                        <button type="submit" class="btn btn-danger px-4 py-2" 
                                                onclick="return confirm('Are you absolutely sure you want to delete this category? This action cannot be undone.');">
                                            <i class="bi bi-trash me-2"></i>
                                            Confirm Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
