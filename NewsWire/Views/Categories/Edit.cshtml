@model NewsWire.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

@section Styles {
    <link href="~/assets/css/crud-forms.css" rel="stylesheet">
}

<!-- Main Content Section -->
<section class="section py-5">
    <div class="container" data-aos="fade-up">
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card form-card">
                    <div class="card-header bg-light border-0 py-4">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-folder-check me-2"></i>
                            Update Category Information
                        </h4>
                        <p class="text-muted mb-0 mt-2">Modify the category details below</p>
                    </div>
                    
                    <div class="card-body p-5">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="row">
                                <!-- Category Name -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Name" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-tag me-2"></i>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </label>
                                    <input asp-for="Name" class="form-control form-control-lg" 
                                           placeholder="Enter category name..." />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <!-- Category Description -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Description" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-card-text me-2"></i>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </label>
                                    <textarea asp-for="Description" class="form-control form-control-lg" 
                                              rows="4" placeholder="Enter category description..."></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="row mt-4 pt-4 border-top">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                        <!-- Back Button -->
                                        <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                            <i class="bi bi-arrow-left me-2"></i>
                                            Back to Categories
                                        </a>

                                        <!-- Update Button -->
                                        <button type="submit" class="btn btn-primary px-4 py-2">
                                            <i class="bi bi-check-circle me-2"></i>
                                            Save Changes
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

