@model List<NewsWire.Models.Category>
<section id="hero" class="hero section">

    <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

        <div class="carousel-item active">
            <img src="~/assets/img/hero-carousel/hero-carousel-1.jpg" alt="">
            <div class="container">
                <h2>Welcome to NewsWire</h2>
                <p>Your trusted source for breaking news and in-depth analysis from around the globe.</p>
                <a href="#about" class="btn-get-started">Read More</a>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/assets/img/hero-carousel/hero-carousel-2.jpg" alt="">
            <div class="container">
                <h2>Future Tech</h2>
                <p>Stay updated with the latest trends in Artificial Intelligence and technology.</p>
                <a href="#about" class="btn-get-started">Read More</a>
            </div>
        </div>

        <div class="carousel-item">
            <img src="~/assets/img/hero-carousel/hero-carousel-3.jpg" alt="">
            <div class="container">
                <h2>Exclusive Reports</h2>
                <p>Special coverage and stories directly from the field.</p>
                <a href="#about" class="btn-get-started">Read More</a>
            </div>
        </div>

        <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

        <ol class="carousel-indicators"></ol>

    </div>

</section>
<section id="featured-services" class="featured-services section">

    <div class="container">

        <div class="row gy-4">
            @foreach (var item in Model)
            {

                <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="100">
                    <a href="News/Index/@item.Id">
                        <div class="service-item position-relative">
                            <div class="icon"><i class="fas fa-heartbeat icon"></i></div>
                            <h4>@item.Name</h4>
                            <p>@item.Description</p>
                        </div>
                    </a>
                </div>

                <!-- End Service Item -->
            }
        </div>

    </div>

</section>

<!-- /Featured Services Section -->