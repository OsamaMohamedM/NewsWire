@model NewsWire.Models.NewsDisplayViewModel

@{
    ViewData["Title"] = "News Article Details";
}

@section Styles {
    <link href="~/assets/css/crud-forms.css" rel="stylesheet">
}

<!-- Main Content Section -->
<section class="section py-5">
    <div class="container" data-aos="fade-up">
        
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card details-card">
                    <div class="card-header bg-light border-0 py-4">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h4 class="card-title mb-2">
                                    <i class="bi bi-newspaper me-2"></i>
                                    @Html.DisplayFor(model => Model.News.Title)
                                </h4>
                               <span class="badge bg-info text-dark rounded-pill px-3 py-1">
    Science
</span>
                            </div>
                            
                        </div>
                    </div>
                    
                    <div class="card-body p-5">
                        <!-- Article Metadata -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="article-meta p-3 rounded">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <strong class="text-muted">
                                                <i class="bi bi-calendar-event me-2"></i>Published:
                                            </strong>
                                            <p class="mb-0">@Html.DisplayFor(model => Model.News.PublishedAt)</p>
                                        </div>
                                        <div class="col-md-4">
                                            <strong class="text-muted">
                                                <i class="bi bi-tags me-2"></i>Topic:
                                            </strong>
                                            <p class="mb-0">@Html.DisplayFor(model => Model.News.Topic)</p>
                                        </div>
                                        <div class="col-md-4">
                                            <strong class="text-muted">
                                                <i class="bi bi-folder me-2"></i>Category:
                                            </strong>
                                            <p class="mb-0">@Html.DisplayFor(model => Model.News.Category.Name)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Article Image -->
                            @if (!string.IsNullOrEmpty(Model.News.ImageUrl))
                            {
                                <div class="col-md-5 mb-4">
                                    <div class="info-item">
                                        <label class="form-label fw-bold text-muted mb-3">
                                            <i class="bi bi-image me-2"></i>
                                            Featured Image
                                        </label>
                                        <div class="info-value">
                                            <img src="@Model.News.ImageUrl" alt="@Model.News.Title" 
                                                 class="img-fluid rounded shadow-sm" style="width: 100%; max-height: 300px; object-fit: cover;" />
                                            <small class="text-muted mt-2 d-block text-truncate">@Html.DisplayFor(model => Model.News.ImageUrl)</small>
                                        </div>
                                    </div>
                                </div>
                            }

                            <!-- Article Content -->
                            <div class="@(string.IsNullOrEmpty(Model.News.ImageUrl) ? "col-12" : "col-md-7") mb-4">
                                <div class="info-item">
                                    <label class="form-label fw-bold text-muted mb-3">
                                        <i class="bi bi-file-text me-2"></i>
                                        @Html.DisplayNameFor(model => Model.News.Content)
                                    </label>
                                    <div class="info-value p-4 bg-light rounded border-start border-4">
                                        <div class="text-dark" style="line-height: 1.8; text-align: justify;">
                                            @Html.Raw(Html.DisplayFor(model => Model.News.Content).ToString().Replace("\n", "<br />"))
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4 pt-4 border-top">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                    <!-- Back Button -->
                                    <a href="javascript:void(0);" onclick="history.back();" class="btn btn-secondary px-4 py-2">
                                        <i class="bi bi-arrow-left me-2"></i>
                                        Back
                                    </a>

                                    @if(Model.IsOwner)
                                    {     
                                    <div class="d-flex gap-2">
                                        <a asp-action="Edit" asp-route-id="@Model.News.Id" class="btn btn-primary px-4 py-2">
                                            <i class="bi bi-pencil-square me-2"></i>
                                            Edit Article
                                        </a>
                                    </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
