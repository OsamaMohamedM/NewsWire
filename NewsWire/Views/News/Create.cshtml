@model NewsWire.Models.News

@{

}

@section Styles {
    <link href="~/assets/css/crud-forms.css" rel="stylesheet">
}

<!-- Main Content Section -->
<section class="section py-5">
    <div class="container" data-aos="fade-up">

        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card form-card">
                    <div class="card-header bg-light border-0 py-4">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-newspaper me-2"></i>
                            Article Information
                        </h4>
                        <p class="text-muted mb-0 mt-2">Fill in the details to create a new news article</p>
                    </div>

                    <div class="card-body p-5">
                        <form asp-action="Create" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                            <div class="row">
                                <!-- Article Title -->
                                <div class="col-md-8 mb-4">
                                    <label asp-for="Title" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-card-heading me-2"></i>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </label>
                                    <input asp-for="Title" class="form-control form-control-lg"
                                           placeholder="Enter article title..." />
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>

                                <!-- Category Selection -->
                                <div class="col-md-4 mb-4">
                                    <label asp-for="CategoryId" class="form-label">Category</label>

                                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                        <option value="">Select Category</option>
                                    </select>

                                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                                </div>
                                <!-- Article Content -->
                                <div class="col-12 mb-4">
                                    <label asp-for="Content" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-file-text me-2"></i>
                                        @Html.DisplayNameFor(model => model.Content)
                                    </label>
                                    <textarea asp-for="Content" class="form-control form-control-lg"
                                              rows="6" placeholder="Write your article content here..."></textarea>
                                    <span asp-validation-for="Content" class="text-danger small"></span>
                                </div>

                                <!-- Image URL -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="ImageFile" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-image me-2"></i>
                                        Upload Image
                                    </label>

                                    <input asp-for="ImageFile" class="form-control" accept="image/*" />

                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>

                                <!-- Topic -->
                                <div class="col-md-6 mb-4">
                                    <label asp-for="Topic" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-tags me-2"></i>
                                        @Html.DisplayNameFor(model => model.Topic)
                                    </label>
                                    <input asp-for="Topic" class="form-control form-control-lg"
                                           placeholder="Enter article topic..." />
                                    <span asp-validation-for="Topic" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="row mt-4 pt-4 border-top">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                        <!-- Back Button -->
                                        <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                            <i class="bi bi-arrow-left me-2"></i>
                                            Back to Articles
                                        </a>

                                        <!-- Submit Button -->
                                        <button type="submit" class="btn btn-primary px-4 py-2">
                                            <i class="bi bi-plus-circle me-2"></i>
                                            Publish Article
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>