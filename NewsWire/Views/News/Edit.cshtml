@model NewsWire.Models.News

@{
    ViewData["Title"] = "Edit News Article";
}

@section Styles {
    <link href="~/assets/css/crud-forms.css" rel="stylesheet">
}

<!-- Main Content Section -->
<section class="section py-5">
    <div class="container" data-aos="fade-up">
        
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card form-card">
                    <div class="card-header bg-light border-0 py-4">
                        <h4 class="card-title mb-0">
                            <i class="bi bi-newspaper me-2"></i>
                            Update Article Information
                        </h4>
                        <p class="text-muted mb-0 mt-2">Modify the article details below</p>
                    </div>
                    
                    <div class="card-body p-5">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="Id" />
                            
                            <div class="row">
                                <!-- Article Title -->
                                <div class="col-md-8 mb-4">
                                    <label asp-for="Title" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-card-heading me-2"></i>
                                        @Html.DisplayNameFor(model => model.Title)
                                    </label>
                                    <input asp-for="Title" class="form-control form-control-lg" 
                                           placeholder="Enter article title..." />
                                    <span asp-validation-for="Title" class="text-danger small"></span>
                                </div>

                                <!-- Category Selection -->
                                <div class="col-md-4 mb-4">
                                    <label asp-for="CategoryId" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-folder me-2"></i>
                                        @Html.DisplayNameFor(model => model.CategoryId)
                                    </label>
                                    <select asp-for="CategoryId" class="form-select form-select-lg" asp-items="ViewBag.CategoryId">
                                        <option value="">Select Category</option>
                                    </select>
                                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                                </div>

                                <!-- Article Content -->
                                <div class="col-12 mb-4">
                                    <label asp-for="Content" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-file-text me-2"></i>
                                        @Html.DisplayNameFor(model => model.Content)
                                    </label>
                                    <textarea asp-for="Content" class="form-control form-control-lg" 
                                              rows="6" placeholder="Write your article content here..."></textarea>
                                    <span asp-validation-for="Content" class="text-danger small"></span>
                                </div>

                                <!-- Image URL -->
                                <div class="col-md-4 mb-4">
                                    <label asp-for="ImageUrl" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-image me-2"></i>
                                        @Html.DisplayNameFor(model => model.ImageUrl)
                                    </label>
                                    <input asp-for="ImageUrl" class="form-control form-control-lg" 
                                           placeholder="https://example.com/image.jpg" />
                                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                                </div>

                                <!-- Published Date -->
                                <div class="col-md-4 mb-4">
                                    <label asp-for="PublishedAt" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-calendar-event me-2"></i>
                                        @Html.DisplayNameFor(model => model.PublishedAt)
                                    </label>
                                    <input asp-for="PublishedAt" class="form-control form-control-lg" type="datetime-local" />
                                    <span asp-validation-for="PublishedAt" class="text-danger small"></span>
                                </div>

                                <!-- Topic -->
                                <div class="col-md-4 mb-4">
                                    <label asp-for="Topic" class="form-label fw-bold" style="color: #555;">
                                        <i class="bi bi-tags me-2"></i>
                                        @Html.DisplayNameFor(model => model.Topic)
                                    </label>
                                    <input asp-for="Topic" class="form-control form-control-lg" 
                                           placeholder="Enter article topic..." />
                                    <span asp-validation-for="Topic" class="text-danger small"></span>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="row mt-4 pt-4 border-top">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                        <!-- Back Button -->
                                        <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                            <i class="bi bi-arrow-left me-2"></i>
                                            Back to Articles
                                        </a>

                                        <!-- Update Button -->
                                        <button type="submit" class="btn btn-primary px-4 py-2">
                                            <i class="bi bi-check-circle me-2"></i>
                                            Update Article
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

