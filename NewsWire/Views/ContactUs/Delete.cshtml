@model NewsWire.Models.ContactUs

@{
    ViewData["Title"] = "Delete Contact Message";
}

@section Styles {
    <link href="~/assets/css/crud-forms.css" rel="stylesheet">
}

<!-- Main Content Section -->
<section class="section py-5">
    <div class="container" data-aos="fade-up">
        
        <!-- Warning Alert -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="alert alert-danger delete-warning" role="alert">
                    <h5 class="alert-heading mb-3">
                        <i class="bi bi-shield-exclamation me-2"></i>
                        Confirm Message Deletion
                    </h5>
                    <p class="mb-0">
                        <strong>Warning:</strong> This action cannot be undone. The contact message will be permanently deleted from the system.
                    </p>
                </div>
            </div>
        </div>

        <!-- Message Details Card -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card delete-card border-0">
                    <div class="card-header bg-light border-0 py-4">
                        <h4 class="card-title mb-0 text-danger">
                            <i class="bi bi-envelope-x me-2"></i>
                            Contact Message Details
                        </h4>
                        <p class="text-muted mb-0 mt-2">Review the message information before deletion</p>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="row">
                            <!-- Sender Name -->
                            <div class="col-md-6 mb-4">
                                <div class="info-item">
                                    <label class="form-label fw-bold text-muted mb-2">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </label>
                                    <div class="info-value p-3 bg-light rounded">
                                        <h6 class="mb-0 text-dark">@Html.DisplayFor(model => model.Name)</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Email Address -->
                            <div class="col-md-6 mb-4">
                                <div class="info-item">
                                    <label class="form-label fw-bold text-muted mb-2">
                                        @Html.DisplayNameFor(model => model.Email)
                                    </label>
                                    <div class="info-value p-3 bg-light rounded">
                                        <p class="mb-0 text-dark">
                                            <i class="bi bi-envelope me-2"></i>
                                            @Html.DisplayFor(model => model.Email)
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <!-- Subject -->
                            <div class="col-12 mb-4">
                                <div class="info-item">
                                    <label class="form-label fw-bold text-muted mb-2">
                                        @Html.DisplayNameFor(model => model.Subject)
                                    </label>
                                    <div class="info-value p-3 bg-light rounded">
                                        <h6 class="mb-0 text-dark">@Html.DisplayFor(model => model.Subject)</h6>
                                    </div>
                                </div>
                            </div>

                            <!-- Message Content -->
                            <div class="col-12 mb-4">
                                <div class="info-item">
                                    <label class="form-label fw-bold text-muted mb-2">
                                        @Html.DisplayNameFor(model => model.Message)
                                    </label>
                                    <div class="info-value p-3 bg-light rounded">
                                        <p class="mb-0 text-dark" style="line-height: 1.7;">
                                            @Html.Raw(Html.DisplayFor(model => model.Message).ToString().Replace("\n", "<br />"))
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4 pt-4 border-top">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                    <!-- Back Button -->
                                    <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                        <i class="bi bi-arrow-left me-2"></i>
                                        Back to Messages
                                    </a>

                                    <!-- Delete Form -->
                                    <form asp-action="Delete" class="d-inline">
                                        <input type="hidden" asp-for="Id" />
                                        <button type="submit" class="btn btn-danger px-4 py-2" 
                                                onclick="return confirm('Are you absolutely sure you want to delete this contact message? This action cannot be undone.');">
                                            <i class="bi bi-trash me-2"></i>
                                            Confirm Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
