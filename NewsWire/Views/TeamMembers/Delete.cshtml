@model NewsWire.Models.TeamMember

@{
    ViewData["Title"] = "Delete Team Member";
}

@section Styles {
    <link href="~/assets/css/crud-forms.css" rel="stylesheet">
}

<!-- Main Content Section -->
<section class="section py-5">
    <div class="container" data-aos="fade-up">
        
        <!-- Warning Alert -->
        <div class="row justify-content-center mb-4">
            <div class="col-lg-8">
                <div class="alert alert-danger delete-warning" role="alert">
                    <h5 class="alert-heading mb-3">
                        <i class="bi bi-shield-exclamation me-2"></i>
                        Confirm Team Member Deletion
                    </h5>
                    <p class="mb-0">
                        <strong>Warning:</strong> This action cannot be undone. Removing this team member will permanently delete their information from the system.
                    </p>
                </div>
            </div>
        </div>

        <!-- Member Details Card -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card delete-card border-0">
                    <div class="card-header bg-light border-0 py-4">
                        <h4 class="card-title mb-0 text-danger">
                            <i class="bi bi-person-x me-2"></i>
                            Team Member Details
                        </h4>
                        <p class="text-muted mb-0 mt-2">Review the team member information before deletion</p>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="row">
                            <!-- Profile Image -->
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="text-center">
                                        <img src="@Model.ImageUrl" alt="@Model.Name" 
                                             class="img-fluid rounded-circle shadow-sm" style="width: 150px; height: 150px; object-fit: cover;" />
                                    </div>
                                </div>
                            }

                            <!-- Member Info -->
                            <div class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "col-12" : "col-md-8")">
                                <div class="row">
                                    <!-- Member Name -->
                                    <div class="col-12 mb-4">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted mb-2">
                                                @Html.DisplayNameFor(model => model.Name)
                                            </label>
                                            <div class="info-value p-3 bg-light rounded">
                                                <h5 class="mb-0 text-dark">@Html.DisplayFor(model => model.Name)</h5>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Job Title -->
                                    <div class="col-12 mb-4">
                                        <div class="info-item">
                                            <label class="form-label fw-bold text-muted mb-2">
                                                @Html.DisplayNameFor(model => model.JobTitle)
                                            </label>
                                            <div class="info-value p-3 bg-light rounded">
                                                <p class="mb-0 text-dark">
                                                    <i class="bi bi-briefcase me-2"></i>
                                                    @Html.DisplayFor(model => model.JobTitle)
                                                </p>
                                            </div>
                                        </div>
                                    </div>

                                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                    {
                                        <!-- Image URL -->
                                        <div class="col-12 mb-4">
                                            <div class="info-item">
                                                <label class="form-label fw-bold text-muted mb-2">
                                                    @Html.DisplayNameFor(model => model.ImageUrl)
                                                </label>
                                                <div class="info-value p-3 bg-light rounded">
                                                    <p class="mb-0 text-dark text-truncate">@Html.DisplayFor(model => model.ImageUrl)</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row mt-4 pt-4 border-top">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                                    <!-- Back Button -->
                                    <a asp-action="Index" class="btn btn-secondary px-4 py-2">
                                        <i class="bi bi-arrow-left me-2"></i>
                                        Back to Team
                                    </a>

                                    <!-- Delete Form -->
                                    <form asp-action="Delete" class="d-inline">
                                        <input type="hidden" asp-for="Id" />
                                        <button type="submit" class="btn btn-danger px-4 py-2" 
                                                onclick="return confirm('Are you absolutely sure you want to delete this team member? This action cannot be undone.');">
                                            <i class="bi bi-trash me-2"></i>
                                            Confirm Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
