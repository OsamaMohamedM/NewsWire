@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@section Styles {
    <link href="~/assets/css/account-pages.css" rel="stylesheet">
}

<div class="account-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card account-card">
                    <div class="account-card-header">
                        <h1>
                            <i class="bi bi-key me-2"></i>
                            Reset Password
                        </h1>
                        <p>We'll send you a reset link via email</p>
                    </div>
                    
                    <div class="account-card-body">
                        <form method="post">
                            <h3 class="mb-4 text-center" style="color: var(--accent-color);">
                                <i class="bi bi-envelope-at me-2"></i>
                                Enter Your Email
                            </h3>
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-send me-2"></i>
                                    Send Reset Link
                                </button>
                            </div>
                            
                            <div class="account-links text-center">
                                <div class="mb-2">
                                    <a asp-page="./Login">
                                        <i class="bi bi-arrow-left me-1"></i>
                                        Back to Sign In
                                    </a>
                                </div>
                                <div>
                                    <a asp-page="./Register">
                                        <i class="bi bi-person-plus me-1"></i>
                                        Create New Account
                                    </a>
                                </div>
                            </div>
                        </form>
                        
                        <!-- Help Information -->
                        <div class="external-login-section mt-4">
                            <h5>
                                <i class="bi bi-info-circle me-2"></i>
                                Need Help?
                            </h5>
                            <p class="text-muted mb-0">
                                If you don't receive the reset email within a few minutes, please check your spam folder 
                                or contact our support team for assistance.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
