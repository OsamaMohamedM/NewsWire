@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@section Styles {
    <link href="~/assets/css/account-pages.css" rel="stylesheet">
}

<div class="account-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card account-card">
                    <div class="account-card-header">
                        <h1>
                            <i class="bi bi-shield-lock me-2"></i>
                            Reset Password
                        </h1>
                        <p>Enter your new password to secure your account</p>
                    </div>
                    
                    <div class="account-card-body">
                        <form method="post">
                            <h3 class="mb-4 text-center" style="color: var(--accent-color);">
                                <i class="bi bi-key me-2"></i>
                                Create New Password
                            </h3>
                            
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                            <input asp-for="Input.Code" type="hidden" />
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label">
                                    <i class="bi bi-envelope me-2"></i>Email Address
                                </label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Enter your new password" />
                                <label asp-for="Input.Password" class="form-label">
                                    <i class="bi bi-lock me-2"></i>New Password
                                </label>
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            
                            <div class="form-floating mb-4">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm your new password" />
                                <label asp-for="Input.ConfirmPassword" class="form-label">
                                    <i class="bi bi-shield-check me-2"></i>Confirm Password
                                </label>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Update Password
                                </button>
                            </div>
                            
                            <div class="account-links text-center">
                                <div>
                                    <a asp-page="./Login">
                                        <i class="bi bi-arrow-left me-1"></i>
                                        Back to Sign In
                                    </a>
                                </div>
                            </div>
                        </form>
                        
                        <!-- Security Information -->
                        <div class="external-login-section mt-4">
                            <h5>
                                <i class="bi bi-shield-check me-2"></i>
                                Password Security
                            </h5>
                            <div class="small text-muted">
                                <div class="d-flex align-items-center mb-1">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Use at least 8 characters
                                </div>
                                <div class="d-flex align-items-center mb-1">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Include uppercase and lowercase letters
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-check-circle-fill text-success me-2"></i>
                                    Add numbers and special characters
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
