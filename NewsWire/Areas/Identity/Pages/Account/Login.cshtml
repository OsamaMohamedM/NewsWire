@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

@section Styles {
    <link href="~/assets/css/account-pages.css" rel="stylesheet">
}

<div class="account-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="card account-card">
                    <div class="account-card-header">
                        <h1>
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Welcome Back
                        </h1>
                        <p>Sign in to your NewsWire account</p>
                    </div>

                    <div class="account-card-body">
                        <div class="row">
                            <!-- Login Form -->
                            <div class="col-lg-6 mb-4">
                                <section>
                                    <form id="account" method="post">
                                        <h3 class="mb-4 text-center" style="color: var(--accent-color);">
                                            <i class="bi bi-person-circle me-2"></i>
                                            Account Login
                                        </h3>

                                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                            <label asp-for="Input.Email" class="form-label">
                                                <i class="bi bi-envelope me-2"></i>Email Address
                                            </label>
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                                            <label asp-for="Input.Password" class="form-label">
                                                <i class="bi bi-lock me-2"></i>Password
                                            </label>
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>

                                        <div class="form-check mb-4">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            <label asp-for="Input.RememberMe" class="form-check-label">
                                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                                            </label>
                                        </div>

                                        <div class="d-grid mb-4">
                                            <button id="login-submit" type="submit" class="btn btn-primary btn-lg">
                                                <i class="bi bi-box-arrow-in-right me-2"></i>
                                                Sign In
                                            </button>
                                        </div>

                                        <div class="account-links text-center">
                                            <div class="mb-2">
                                                <a id="forgot-password" asp-page="./ForgotPassword">
                                                    <i class="bi bi-question-circle me-1"></i>
                                                    Forgot your password?
                                                </a>
                                            </div>
                                            <div class="mb-2">
                                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                                                    <i class="bi bi-person-plus me-1"></i>
                                                    Create new account
                                                </a>
                                            </div>
                                            <div>
                                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                                                    <i class="bi bi-envelope-check me-1"></i>
                                                    Resend email confirmation
                                                </a>
                                            </div>
                                        </div>
                                    </form>
                                </section>
                            </div>

                            <!-- External Login -->
                            <div class="col-lg-6">
                                <section class="external-login-section h-100">
                                    <h3>
                                        <i class="bi bi-globe2 me-2"></i>
                                        External Login
                                    </h3>
                                    @{
                                        if ((Model.ExternalLogins?.Count ?? 0) == 0)
                                        {
                                            <div class="text-center py-4">
                                                <div class="mb-3">
                                                    <i class="bi bi-info-circle" style="font-size: 3rem; color: var(--accent-color);"></i>
                                                </div>
                                                <h5>No External Services</h5>
                                                <p class="text-muted">
                                                    There are no external authentication services configured.
                                                    See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715" target="_blank">
                                                        article about setting up external services
                                                    </a> for more information.
                                                </p>
                                            </div>
                                        }
                                        else
                                        {
                                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                                <div class="d-grid gap-2">
                                                    @foreach (var provider in Model.ExternalLogins!)
                                                    {
                                                        <button type="submit" class="btn btn-outline-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">
                                                            <i class="bi bi-box-arrow-in-right me-2"></i>
                                                            Sign in with @provider.DisplayName
                                                        </button>
                                                    }
                                                </div>
                                            </form>
                                        }
                                    }
                                </section>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}