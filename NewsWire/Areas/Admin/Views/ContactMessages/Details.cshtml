@model NewsWire.Models.ContactUs
@{
    ViewData["Title"] = "Message Details";
    ViewData["PageTitle"] = "Contact Message Details";
}

<div class="admin-page-header">
    <h2><i class="bi bi-envelope-open"></i> Message Details</h2>
    <div>
        <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-admin-danger">
            <i class="bi bi-trash"></i> Delete
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="row mb-4">
        <div class="col-md-6">
            <h5 style="color: #3fbbc0;">From:</h5>
            <p style="font-size: 18px; margin-bottom: 5px;"><strong>@Model.Name</strong></p>
            <p style="color: #6c757d;">
                <i class="bi bi-envelope"></i> @Model.Email
            </p>
        </div>
        <div class="col-md-6">
            <h5 style="color: #3fbbc0;">Subject:</h5>
            <p style="font-size: 18px;"><strong>@Model.Subject</strong></p>
        </div>
    </div>

    <hr />

    <div class="mt-4">
        <h5 style="color: #3fbbc0;">Message:</h5>
        <div class="p-3" style="background: #f8f9fa; border-radius: 8px; white-space: pre-line;">
            @Model.Message
        </div>
    </div>

    <div class="mt-4">
        <a href="mailto:@Model.Email?subject=Re: @Model.Subject" class="btn btn-admin-primary">
            <i class="bi bi-reply"></i> Reply via Email
        </a>
    </div>
</div>
