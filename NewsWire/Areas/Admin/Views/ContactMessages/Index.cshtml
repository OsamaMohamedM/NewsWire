@model IEnumerable<NewsWire.Models.ContactUs>
@{
    ViewData["Title"] = "Contact Messages";
    ViewData["PageTitle"] = "Contact Messages";
}

<div class="admin-page-header">
    <h2><i class="bi bi-envelope"></i> Contact Messages</h2>
</div>

<div class="admin-table">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Subject</th>
                <th>Message</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.Name</strong></td>
                        <td>@item.Email</td>
                        <td>@item.Subject</td>
                        <td>@(item.Message.Length > 50 ? item.Message.Substring(0, 50) + "..." : item.Message)</td>
                        <td>
                            <div class="action-buttons">
                                <a href="@Url.Action("Details", new { id = item.Id })" class="action-btn action-btn-view">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="action-btn action-btn-delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">
                        <div class="admin-empty-state">
                            <i class="bi bi-envelope"></i>
                            <h4>No Contact Messages</h4>
                            <p>You don't have any contact messages yet.</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
