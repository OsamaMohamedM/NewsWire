@model NewsWire.Models.ContactUs
@{
    ViewData["Title"] = "Delete Message";
    ViewData["PageTitle"] = "Delete Contact Message";
}

<div class="admin-page-header">
    <h2><i class="bi bi-trash"></i> Delete Message</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="admin-card">
    <div class="alert alert-danger">
        <h5><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
        <p>Are you sure you want to delete this contact message? This action cannot be undone.</p>
    </div>

    <dl class="row">
        <dt class="col-sm-2">Name:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Subject:</dt>
        <dd class="col-sm-10">@Model.Subject</dd>

        <dt class="col-sm-2">Message:</dt>
        <dd class="col-sm-10" style="white-space: pre-line;">@Model.Message</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-admin-danger">
            <i class="bi bi-trash"></i> Delete Message
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
