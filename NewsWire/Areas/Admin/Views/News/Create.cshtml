@model NewsWire.Models.News
@{
    ViewData["Title"] = "Create News";
    ViewData["PageTitle"] = "Create News Article";
}

<div class="admin-page-header">
    <h2><i class="bi bi-plus-circle"></i> Create News Article</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="admin-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="row">
            <div class="col-md-8">
                <div class="admin-form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control admin-form-control" placeholder="Enter article title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="admin-form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <textarea asp-for="Content" class="form-control admin-form-control" rows="10" placeholder="Write your article content here..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-4">
                <div class="admin-form-group">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select asp-for="CategoryId" class="form-select admin-form-control" asp-items="ViewBag.CategoryId">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="admin-form-group">
                    <label asp-for="Topic" class="control-label"></label>
                    <input asp-for="Topic" class="form-control admin-form-control" placeholder="e.g., Breaking News" />
                    <span asp-validation-for="Topic" class="text-danger"></span>
                </div>

                <div class="admin-form-group">
                    <label asp-for="ImageUrl" class="control-label">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control admin-form-control" placeholder="https://..." />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <small class="text-muted">Enter the full URL of the image</small>
                </div>

                <div class="admin-form-group">
                    <button type="submit" class="btn btn-admin-primary w-100">
                        <i class="bi bi-save"></i> Create Article
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
