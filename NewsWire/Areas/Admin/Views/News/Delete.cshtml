@model NewsWire.Models.News
@{
    ViewData["Title"] = "Delete News";
    ViewData["PageTitle"] = "Delete News Article";
}

<div class="admin-page-header">
    <h2><i class="bi bi-trash"></i> Delete News Article</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="admin-card">
    <div class="alert alert-danger">
        <h5><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
        <p>Are you sure you want to delete this news article? This action cannot be undone.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded" style="max-height: 300px; object-fit: cover;">
        </div>
        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-3">Title:</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3">Topic:</dt>
                <dd class="col-sm-9">@Model.Topic</dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">@Model.Category?.Name</dd>

                <dt class="col-sm-3">Author:</dt>
                <dd class="col-sm-9">@(Model.Author?.Email ?? "Unknown")</dd>

                <dt class="col-sm-3">Published:</dt>
                <dd class="col-sm-9">@Model.PublishedAt.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-3">Content:</dt>
                <dd class="col-sm-9">@(Model.Content.Length > 200 ? Model.Content.Substring(0, 200) + "..." : Model.Content)</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-admin-danger">
            <i class="bi bi-trash"></i> Delete Article
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
