@model IEnumerable<NewsWire.Models.News>
@{
    ViewData["Title"] = "News Management";
    ViewData["PageTitle"] = "News Management";
}

<div class="admin-page-header">
    <h2><i class="bi bi-newspaper"></i> News Articles</h2>
    <a href="@Url.Action("Create")" class="btn btn-admin-primary">
        <i class="bi bi-plus-circle"></i> Add New Article
    </a>
</div>

<div class="admin-table">
    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title</th>
                <th>Category</th>
                <th>Author</th>
                <th>Published Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="@item.ImageUrl" alt="@item.Title" style="width: 80px; height: 60px; object-fit: cover; border-radius: 5px;">
                        </td>
                        <td>
                            <strong>@item.Title</strong><br />
                            <small class="text-muted">@item.Topic</small>
                        </td>
                        <td>
                            <span class="badge-admin-primary">@item.Category?.Name</span>
                        </td>
                        <td>@(item.Author?.Email ?? "Unknown")</td>
                        <td>@item.PublishedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            <div class="action-buttons">
                                <a href="@Url.Action("Details", new { id = item.Id })" class="action-btn action-btn-view">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="action-btn action-btn-edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="action-btn action-btn-delete">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6">
                        <div class="admin-empty-state">
                            <i class="bi bi-newspaper"></i>
                            <h4>No News Articles Found</h4>
                            <p>Start by creating your first news article.</p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
