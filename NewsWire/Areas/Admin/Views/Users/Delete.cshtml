@model UserViewModel
@{
    ViewData["Title"] = "Delete User";
    ViewData["PageTitle"] = "Delete User";
}

<div class="admin-page-header">
    <h2><i class="bi bi-trash"></i> Delete User</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="admin-card">
    <div class="alert alert-danger">
        <h5><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
        <p>Are you sure you want to delete this user? This action cannot be undone and will remove all user data.</p>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">
            @(Model.FirstName ?? "") @(Model.LastName ?? "")
            @if (string.IsNullOrWhiteSpace(Model.FirstName) && string.IsNullOrWhiteSpace(Model.LastName))
            {
                <span class="text-muted">No name set</span>
            }
        </dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Roles:</dt>
        <dd class="col-sm-9">
            @foreach (var role in Model.Roles)
            {
                <span class="badge-admin-primary me-1">@role</span>
            }
            @if (!Model.Roles.Any())
            {
                <span class="text-muted">No roles assigned</span>
            }
        </dd>

        <dt class="col-sm-3">User ID:</dt>
        <dd class="col-sm-9"><code>@Model.Id</code></dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-admin-danger">
            <i class="bi bi-trash"></i> Delete User
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
