@model UserViewModel
@{
    ViewData["Title"] = "User Details";
    ViewData["PageTitle"] = "User Details";
}

<div class="admin-page-header">
    <h2><i class="bi bi-person"></i> User Details</h2>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="row">
        <div class="col-md-3 text-center">
            @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
            {
                <img src="@Model.ProfilePictureUrl" alt="@Model.FirstName" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #3fbbc0;">
            }
            else
            {
                <div class="rounded-circle mb-3 d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px; background: #3fbbc0; color: white; font-size: 48px; font-weight: bold;">
                    @(Model.FirstName?.Substring(0, 1) ?? Model.Email?.Substring(0, 1) ?? "U")
                </div>
            }
        </div>
        <div class="col-md-9">
            <h3 class="mb-4" style="color: #3fbbc0;">
                @(Model.FirstName ?? "") @(Model.LastName ?? "")
                @if (string.IsNullOrWhiteSpace(Model.FirstName) && string.IsNullOrWhiteSpace(Model.LastName))
                {
                    <span>User Profile</span>
                }
            </h3>
            
            <dl class="row">
                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Phone Number:</dt>
                <dd class="col-sm-9">@(Model.PhoneNumber ?? "Not provided")</dd>

                <dt class="col-sm-3">Roles:</dt>
                <dd class="col-sm-9">
                    @foreach (var role in Model.Roles)
                    {
                        <span class="badge-admin-primary me-1">@role</span>
                    }
                    @if (!Model.Roles.Any())
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </dd>

                <dt class="col-sm-3">User ID:</dt>
                <dd class="col-sm-9"><code>@Model.Id</code></dd>
            </dl>
        </div>
    </div>
</div>
