@model NewsWire.Models.TeamMember
@{
    ViewData["Title"] = "Team Member Details";
    ViewData["PageTitle"] = "Team Member Details";
}

<div class="admin-page-header">
    <h2><i class="bi bi-person"></i> Team Member Details</h2>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="rounded-circle mb-3" style="width: 200px; height: 200px; object-fit: cover; border: 4px solid #3fbbc0;">
        </div>
        <div class="col-md-8">
            <h3 class="mb-4" style="color: #3fbbc0;">@Model.Name</h3>
            
            <dl class="row">
                <dt class="col-sm-3">Job Title:</dt>
                <dd class="col-sm-9">@Model.JobTitle</dd>

                <dt class="col-sm-3">Image URL:</dt>
                <dd class="col-sm-9">
                    <a href="@Model.ImageUrl" target="_blank">@Model.ImageUrl</a>
                </dd>
            </dl>
        </div>
    </div>
</div>
