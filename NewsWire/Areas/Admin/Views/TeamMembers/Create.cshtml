@model NewsWire.Models.TeamMember
@{
    ViewData["Title"] = "Create Team Member";
    ViewData["PageTitle"] = "Create Team Member";
}

<div class="admin-page-header">
    <h2><i class="bi bi-plus-circle"></i> Add Team Member</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="admin-card">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="admin-form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control admin-form-control" placeholder="Enter member name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="admin-form-group">
            <label asp-for="JobTitle" class="control-label">Job Title</label>
            <input asp-for="JobTitle" class="form-control admin-form-control" placeholder="Enter job title" />
            <span asp-validation-for="JobTitle" class="text-danger"></span>
        </div>

        <div class="admin-form-group">
            <label asp-for="ImageUrl" class="control-label">Image URL</label>
            <input asp-for="ImageUrl" class="form-control admin-form-control" placeholder="https://..." />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
            <small class="text-muted">Enter the full URL of the profile image</small>
        </div>

        <div class="admin-form-group">
            <button type="submit" class="btn btn-admin-primary">
                <i class="bi bi-save"></i> Add Team Member
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
