@model IEnumerable<NewsWire.Models.Category>
@{
    ViewData["Title"] = "Categories";
    ViewData["PageTitle"] = "Categories Management";
}

<div class="admin-page-header">
    <h2><i class="bi bi-tags"></i> Categories</h2>
    <a href="@Url.Action("Create")" class="btn btn-admin-primary">
        <i class="bi bi-plus-circle"></i> Add New Category
    </a>
</div>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="admin-card">
                    <h4 style="color: #3fbbc0; margin-bottom: 15px;">
                        <i class="bi bi-tag"></i> @item.Name
                    </h4>
                    <p style="color: #6c757d; margin-bottom: 20px;">
                        @(string.IsNullOrEmpty(item.Description) ? "No description available" : item.Description)
                    </p>
                    <div class="action-buttons">
                        <a href="@Url.Action("Details", new { id = item.Id })" class="action-btn action-btn-view">
                            <i class="bi bi-eye"></i> View
                        </a>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="action-btn action-btn-edit">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="action-btn action-btn-delete">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="admin-card">
                <div class="admin-empty-state">
                    <i class="bi bi-tags"></i>
                    <h4>No Categories Found</h4>
                    <p>Start by creating your first category.</p>
                    <a href="@Url.Action("Create")" class="btn btn-admin-primary">
                        <i class="bi bi-plus-circle"></i> Create Category
                    </a>
                </div>
            </div>
        </div>
    }
</div>
