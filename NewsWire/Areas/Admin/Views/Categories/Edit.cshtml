@model NewsWire.Models.Category
@{
    ViewData["Title"] = "Edit Category";
    ViewData["PageTitle"] = "Edit Category";
}

<div class="admin-page-header">
    <h2><i class="bi bi-pencil"></i> Edit Category</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="admin-card">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        
        <div class="admin-form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control admin-form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="admin-form-group">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control admin-form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="admin-form-group">
            <button type="submit" class="btn btn-admin-primary">
                <i class="bi bi-save"></i> Update Category
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
