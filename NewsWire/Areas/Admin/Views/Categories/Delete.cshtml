@model NewsWire.Models.Category
@{
    ViewData["Title"] = "Delete Category";
    ViewData["PageTitle"] = "Delete Category";
}

<div class="admin-page-header">
    <h2><i class="bi bi-trash"></i> Delete Category</h2>
    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="admin-card">
    <div class="alert alert-danger">
        <h5><i class="bi bi-exclamation-triangle"></i> Confirm Deletion</h5>
        <p>Are you sure you want to delete this category? This action cannot be undone.</p>
        @if (Model.NewsItems != null && Model.NewsItems.Any())
        {
            <p class="mb-0"><strong>Warning:</strong> This category has @Model.NewsItems.Count() news article(s) associated with it.</p>
        }
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name:</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description:</dt>
        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description" : Model.Description)</dd>

        @if (Model.NewsItems != null && Model.NewsItems.Any())
        {
            <dt class="col-sm-3">News Articles:</dt>
            <dd class="col-sm-9">@Model.NewsItems.Count() article(s)</dd>
        }
    </dl>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-admin-danger">
            <i class="bi bi-trash"></i> Delete Category
        </button>
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
