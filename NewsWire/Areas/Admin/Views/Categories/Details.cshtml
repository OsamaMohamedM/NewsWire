@model NewsWire.Models.Category
@{
    ViewData["Title"] = "Category Details";
    ViewData["PageTitle"] = "Category Details";
}

<div class="admin-page-header">
    <h2><i class="bi bi-tag"></i> Category Details</h2>
    <div>
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Edit
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="admin-card">
    <h3 class="mb-4" style="color: #3fbbc0;">@Model.Name</h3>
    
    <dl class="row">
        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@(string.IsNullOrEmpty(Model.Description) ? "No description available" : Model.Description)</dd>

        <dt class="col-sm-2">News Articles:</dt>
        <dd class="col-sm-10">@(Model.NewsItems?.Count() ?? 0) article(s)</dd>
    </dl>

    @if (Model.NewsItems != null && Model.NewsItems.Any())
    {
        <h4 class="mt-4 mb-3">Articles in this Category:</h4>
        <div class="list-group">
            @foreach (var news in Model.NewsItems.OrderByDescending(n => n.PublishedAt).Take(10))
            {
                <a href="@Url.Action("Details", "News", new { id = news.Id })" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">@news.Title</h5>
                        <small>@news.PublishedAt.ToString("MMM dd, yyyy")</small>
                    </div>
                    <p class="mb-1">@news.Topic</p>
                </a>
            }
        </div>
    }
</div>
